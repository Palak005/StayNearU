<% layout('/layouts/boilerplate') %>

<div class="row mt-3">
    <div class="col-8 offset-2">
    <h1 class="new-head">Create New Listing</h1>
    <br>
    <form action="/listings" method="post" enctype="multipart/form-data" novalidate class="needs-validation">
        <div class="mb-4 head">
            <label for="title" class="form-label">Title</label>
            <input placeholder="Enter Title" type="text" class="form-control" name="listing[title]" required>
            <div class="valid-feedback">
                Title Looks Good!
            </div>
            <div class="invalid-feedback">
                *Title Require
            </div>
        </div>

        <div class="mb-4 head">
            <label for="description" class="form-label">Description</label>
            <textarea placeholder="Enter Description" type="text" class="form-control"  name="listing[description]" required></textarea>
            <div class="invalid-feedback">
                *Enter Short Description
            </div>
        </div>
        
        <div class="mb-4 head">
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" class="form-control" name="listing[image]" required>    
        </div>

        <div class="row head">
            <div class="mb-4 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" placeholder="Enter Price" class="form-control" name="listing[price]" required>
                <div class="invalid-feedback">
                    *Enter Valid Price
                </div>
            </div>

            <div class="mb-4 col-md-8 head">
                <label for="country" class="form-label">Country</label>
                <input placeholder="Enter Country" type="text" class="form-control" name="listing[country]" required>
                <div class="invalid-feedback">
                    *Country Name Require
                </div>
            </div>            
        </div>


        <div class="mb-4 head">
            <label for="location" class="form-label">Location</label>
            <input placeholder="Enter Location" type="text" class="form-control" name="listing[location]" required>
            <div class="invalid-feedback">
                *Location Require
            </div>
        </div>

        <button class="btn btn-dark add-btn" type="submit" >Add</button>
    
    </form>
    <br><br>
    </div>
</div>
